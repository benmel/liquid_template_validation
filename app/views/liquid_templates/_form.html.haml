= form_for @liquid_template do |f|
  - if @liquid_template.errors.any?
    #error_explanation
      %h2= "#{pluralize(@liquid_template.errors.count, "error")} prohibited this liquid_template from being saved:"
      %ul
        - @liquid_template.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
